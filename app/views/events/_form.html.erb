<%= form_with(model: event) do |form| %>
    <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
        <% event.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<section class="add-evn">
    <div class="container ct-add">
        <form class="evn-add-form" enctype="multipart/form-data">
            <h3>Event Basic info</h3>
            <p>Name your event and tell event-goers why they should come. Add details that highlight what makes it unique.</p>
            <div class="form-group">
              <%= form.label :name %>
              <%= form.text_field :name, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= form.label :description %>
              <%= form.text_area :description, class: "form-control" %>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <%= form.label :type_event %>
                    <%= form.select :type_event, Event::TYPE_EVENT, prompt: "Select Type", class: "form-control" %>
                </div>
                <div class="form-group col-md-6">
                    <%= form.label :category %>
                    <%= form.select :category, Event::CATEGORY, prompt: "Select Category", class: "form-control" %>                   
                </div>
            </div>
            <div class="form-group">
                <%= form.label :poster, "Add event poster" %>
                <%= form.file_field :poster %>
            </div>

            <hr>

            <h3>Location</h3>    
            <p>Help people in the area discover your event and let attendees know where to show up.</p>
            <div class="form-group">
                <%= form.label :even_location, "Event Location" %>
                <%= form.text_field :even_location, class: "form-control" %>
            </div>

            <hr>

            <h3>Date and Time</h3>
            <p>Tell event-goers when your event starts and ends so they can make plans to attend.</p>

            <div class="form-row">
                <div class="form-group col-md-6">
                    <%= form.label :start_date %>
                    <%= form.date_select :start_date, class: "form-control" %>
                </div>
                <div class="form-group col-md-6">
                      <%= form.label :start_time %>
                      <%= form.time_select :start_time, class: "form-control" %>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                      <%= form.label :end_date %>
                      <%= form.date_select :end_date, class: "form-control" %>
                </div>
                <div class="form-group col-md-6">
                    <%= form.label :end_time %>
                    <%= form.time_select :end_time, class: "form-control" %>
                    <%= form.number_field :user_id, id: :event_user_id, value: current_user.id ,class: "form-control", type: :hidden %>
                </div>
            </div>  
            <hr>
             <%= form.submit "Create Event", class: "btn btn-primary btn-block"  %>
        </form>
    </div>
</section>
<% end %>