<p id="notice"><%= notice %></p>
<div class="container-fluid">
  <div class="row">
    <aside class="left-nav col-2">
      <%= render 'shared/side_nav' %>
    </aside>

    <section class="col-8 ">
      <div class="main-cont">
        <div class="container-fluid d-flex contents">
          <div class="event_s my-2">
            <div class="evn-container">
              <div class="events">
                <% @events.each do |event| %>
                <div class="event my-3">
                <%# link to show page %>
                <div class="event-container d-flex">
                  <div class="evn-img">
                    <%= image_tag(event.event_poster) %>
                  </div>
                  <div class="evn-text d-flex">
                    <div class="evn-text-left">
                      <div class="evn-text-header d-flex">
                      <p class="pill evn-location"><%= event.location%></p>
                      <small><p class="mx-2 evn-date"> <%= event.start_date%>from<%= event.start_time%></p></small>
                      </div>

                      <div class="evn-description">
                          <h3 class="evn-title title"><%= event.name %></h3>
                          <p class="evn-description-text">
                            <%= event.description %>
                          </p>
                      </div>
                    </div>
                    <div class="evn-text-right d-flex flex-column" style="gap: 120px;">
                        <div class="evn-links d-flex justify-content-around">
                          <% if event.price.empty? %>
                          <div class="evn-price">
                              <p><b>FREE</b></p>
                          </div>
                          <% else %>
                          <div class="evn-price">
                              <p><b><%= event.price %>Kshs</b></p>
                          </div>
                          <% end %>
                        </div>
                    </div>                    
                  </div>
                </div>
                </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>    
      </div>  
    </section>
  </div>
</div>

