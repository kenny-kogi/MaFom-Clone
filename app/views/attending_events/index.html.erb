<section class="main-cont">
    <div class="container-fluid d-flex contents">
        <main class="mx-5">
            <div class="event_s my-2">
                <div class="evns-container" style="width: 968px; overflow: scroll; padding: 10px; height: 90vh;">
                    <div class="evn-created">
                        <h3>Created events</h3>
                        <table class="table table-borderless">
                            <thead class="thead-light">
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Event name</th>
                                    <th scope="col">Location</th>
                                    <th scope="col">Date</th>
                                    <th scope="col">Price</th>
                                    <th scope="col">Capacity</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% current_user.events.each |event| do  %>
                                    <tr>
                                        <th scope="row"></th>
                                        <td><%= event.name%></td>
                                        <td><%= event.evn_location %></td>
                                        <td><%= event.start_date%></td>
                                        <td><%= event.price%></td>
                                        <td><%= event.capacity%></td>

                                    </tr>
                                <% end %>
                            </tbody>
                        </table>
                    </div><br>
                </div>
            </div>
        </main>
    </div>
</section>